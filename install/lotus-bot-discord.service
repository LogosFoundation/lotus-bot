[Unit]
Description=Lotus Bot Service - Discord platform
After=network.target

[Service]
Type=exec
ExitType=cgroup
User=lotus-bot
Group=%G
PIDFile=/opt/lotus-bot/tmp/discord.pid
WorkingDirectory=/opt/lotus-bot/
ExecStartPre=/opt/lotus-bot/node_modules/typescript/bin/tsc
ExecStart=node index.js Discord
ExecStop=/usr/bin/kill -SIGINT $MAINPID
Restart=on-failure
RestartSec=3

[Install]
WantedBy=multi-user.target